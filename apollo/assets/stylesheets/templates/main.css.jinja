/* ----------------------------------------------------------------------------
QTCOLOR_PRIMARYCOLOR
QTCOLOR_PRIMARYLIGHTCOLOR
QTCOLOR_PRIMARYDARKCOLOR
QTCOLOR_SECONDARYCOLOR
QTCOLOR_SECONDARYLIGHTCOLOR
QTCOLOR_SECONDARYDARKCOLOR
QTCOLOR_PRIMARYTEXTCOLOR
QTCOLOR_SECONDARYTEXTCOLOR
QTCOLOR_DANGER
QTCOLOR_WARNING
QTCOLOR_SUCCESS

FONT_FAMILY

FILTER_OPACITY(color: str, value: Optional[int] = (0 to 1))
FILTER_LUMINOSITY(color: str, value: Optional[int] = (0 to 1))
---------------------------------------------------------------------------- */


* {
    font-family: {{FONT_FAMILY}};
    background-color: {{FILTER_LUMINOSITY(QTCOLOR_PRIMARYDARKCOLOR, 0.075)}};
    color: {{QTCOLOR_SECONDARYTEXTCOLOR}};
    selection-background-color: {{QTCOLOR_PRIMARYLIGHTCOLOR}};
    selection-color: {{QTCOLOR_PRIMARYTEXTCOLOR}};
    margin: 0;
    padding: 0;
    border: 0;
}

*:focus {
   outline: none;
}

QSplitter {
    background-color: transparent;
    border: none;
}

QTabWidget::pane {
    border: none;
}

QMainWindow::separator:vertical,
QSplitter::handle:horizontal {
    border: 0;
}

QMainWindow::separator:horizontal,
QSplitter::handle:vertical {
    border: 0;
}

QMainWindow::separator:vertical:hover,
QSplitter::handle:horizontal:hover {
    border: 1px solid {{FILTER_LUMINOSITY(QTCOLOR_SECONDARYLIGHTCOLOR, 0.1)}};
    border-radius: 1px;
    margin: 2px 0px 2px 0px;
}

QMainWindow::separator:horizontal:hover,
QSplitter::handle:vertical:hover {
    border: 1px solid {{FILTER_LUMINOSITY(QTCOLOR_SECONDARYLIGHTCOLOR, 0.1)}};
    border-radius: 1px;
    margin: 0px 2px 0px 2px;
}

QScrollBar:horizontal {
    border: 0;
    background: {{FILTER_LUMINOSITY(QTCOLOR_PRIMARYDARKCOLOR, 0.075)}};;
    height: 8px;
}

QScrollBar:vertical {
    border: 0;
    background: {{FILTER_LUMINOSITY(QTCOLOR_PRIMARYDARKCOLOR, 0.075)}};;
    width: 8px;
}

QScrollBar::handle {
    background: {{FILTER_LUMINOSITY(QTCOLOR_PRIMARYLIGHTCOLOR, 0.1)}};
    border-radius: 4px;
}

QScrollBar::handle:vertical:hover,
QScrollBar::handle:horizontal:hover {
    background: {{FILTER_LUMINOSITY(QTCOLOR_PRIMARYLIGHTCOLOR, 0.175)}};
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical,
QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    border: 0;
    background: transparent;
    width: 0px;
    height: 0px;
}


