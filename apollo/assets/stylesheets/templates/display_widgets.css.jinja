{% macro style_label(name = '', luminosity = 0.1) %}
    QLabel{% if name != '' %}#{{name}}{% endif %}{
        border: none;
        background: transparent;
        color: {{QTCOLOR_PRIMARYTEXTCOLOR}};
        padding-left: 2px;
    }
{% endmacro %}


{% macro style_slider(name = '', orientation = 'horizontal') %}
    QSlider {
        background-color: transparent;
    }

    QSlider::groove:{{orientation}} {
        position: absolute;
        left: 4px;
        right: 4px;
        background-color: transparent;
    }

    QSlider::handle:{{orientation}} {
        background: {{FILTER_LUMINOSITY(QTCOLOR_SECONDARYDARKCOLOR, 0.4)}};
        border-radius: 2px;
        margin: 0 -4px;
    }

    QSlider::add-page:{{orientation}} {
        background: {{FILTER_LUMINOSITY(QTCOLOR_PRIMARYDARKCOLOR, 0.175)}};
        margin: 2px -4px;
        border-radius: 2px;
    }

    QSlider::sub-page:{{orientation}} {
        background: {{FILTER_LUMINOSITY(QTCOLOR_SECONDARYDARKCOLOR, 0.4)}};
        margin: 2px -4px;
        border-radius: 2px;
    }
{% endmacro %}


{% macro style_inputs() %}
    QDateTimeEdit, QSpinBox, QDoubleSpinBox, QTextEdit, QLineEdit, QComboBox, QPlainTextEdit, QTextEdit {
        color: {{QTCOLOR_PRIMARYTEXTCOLOR}};
        background-color: {{FILTER_LUMINOSITY(QTCOLOR_PRIMARYDARKCOLOR, 0.2)}};
        border: 1px solid {{FILTER_LUMINOSITY(QTCOLOR_PRIMARYDARKCOLOR, 0.25)}};
        border-radius: 4px;
        padding: 2px 8px;
    }

    QDateTimeEdit:disabled, QSpinBox:disabled, QDoubleSpinBox:disabled, QTextEdit:disabled, QLineEdit:disabled,
    QComboBox:disabled, QPlainTextEdit:disabled, QTextEdit:disabled {
        color: {{FILTER_LUMINOSITY(QTCOLOR_PRIMARYDARKCOLOR, 0.25)}};
    }
{% endmacro %}
